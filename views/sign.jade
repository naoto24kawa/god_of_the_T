extends layout

block content
    div.container
        form.form-signin(method='POST', action='/signup', target='_self')
            h2.form-signin-heading Please #{method != 'up' ? 'sign in' : 'sign up'}
            label.sr-only(for='inputEmail') User Name
            input#inputUser.form-control(type='text', name='name', placeholder='User name', required, autofocus)
            label.sr-only(for='inputPassword') Password
            input#inputPassword.form-control(type='password', name='password', placeholder='Password', required)
            if (method == 'up')
                label(for='confirmPassword') Re Enter Password
                input#confPassword.form-control(type='password', name='confPassword', placeholder='Re Enter Password', required)
            div.checkbox
                label: input(type='checkbox', value='remember-me')
                &nbsp
                |Remember
                &nbsp
                |me  
                &nbsp
            button.btn.btn-lg.btn-primary.btn-block(type='submit') #{method != 'up' ? 'Sign in' : 'Sign up'}